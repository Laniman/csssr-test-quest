.range
	margin-top -35px /* For input[type=range] background-image image */
	display block

	//
	// https://css-tricks.com/styling-cross-browser-compatible-range-inputs-css/
	//
	input[type=range]
		width 100% /* Specific width is required for Firefox. */
		height 65px /* For background-image image */
		cursor pointer
		background-color transparent
		background-image url('../images/track.png')
		background-repeat repeat-x
		background-position 0 bottom

		&,
		&::-webkit-slider-thumb // @stylint ignore
			-webkit-appearance none /* Hides the slider so that custom slider can be made */

		&:focus
			outline none /* Removes the blue border. You should probably do some kind of focus styling for accessibility reasons though. */

		&::-webkit-slider-runnable-track // @stylint ignore
				background-color transparent

		&::-webkit-slider-thumb // @stylint ignore
			thumb()

		&::-moz-range-thumb // @stylint ignore
			thumb()

		&::-ms-thumb // @stylint ignore
			thumb()

		&::-moz-range-track // @stylint ignore
			background-color transparent

		&::-ms-track // @stylint ignore
			/* Hides the slider so custom styles can be added */
			color transparent
			background-color transparent
			border-color transparent

		&::-ms-fill-lower // @stylint ignore
			background transparent

		&::-ms-fill-upper // @stylint ignore
			background transparent

	&__ruler
		display flex
		font-family 'PT Sans'
		font-size 13px

	&__element
		position relative

		&:before
			position absolute
			top -24px
			width 100%
			height 18px
			content ''
			background-image url('../images/ruler-line.png')
			background-repeat no-repeat
			background-position left

		&:first-child
			width 20%

			&:before
				height 24px

		&:nth-child(2)
			width 30%

		&:nth-child(3)
			width 30%

		&:last-child
			width 20%
			text-align right

			&:before
				right 0
				height 24px
				background-position right
