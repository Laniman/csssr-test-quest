.textarea
	display block
	width 100%

	overflow hidden

	padding-left 8px
	font-family 'Courier New'
	font-size 30px
	font-weight 400
	line-height 60px  /*Depend of background-image image*/
	resize none
	border none

	background-color transparent
	background-image url('../images/textarea-border.png')
	background-repeat repeat
	background-position -6px 20px /*Depend of background-image image*/
