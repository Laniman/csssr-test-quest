.input
	display block

	&__row
		margin-bottom 20px
		display flex

		+mobile()
			flex-direction column

		label
			align-self flex-end

			+mobile()
				align-self flex-start

		input
			font-family 'Courier New'
			font-size 30px
			flex-grow 1
			margin-left 15px
			padding-left 15px
			padding-bottom 10px
			font-weight 400
			background-color transparent
			background-image url('../images/input-border.png')
			border none

			background-repeat repeat-x
			background-position bottom

			+mobile()
				margin-top 15px
